# Telegram Bot Configuration
# Get your bot token from BotFather on Telegram (@BotFather)
TELEGRAM_BOT_TOKEN=your_token_from_botfather
# Secret token to verify webhook requests (recommended for security)
BOT_SECRET=your_randomly_generated_secret_here
# Telegram Bot Whitelist Chat IDs (comma-separated for multiple). 
TELEGRAM_BOT_WHITELIST=your_telegram_whitelist_chat_id_here

# GitHub Token for accessing GitHub API
GITHUB_TOKEN=your_github_token_here
# Path to the tasks file in the GitHub repository
GITHUB_PATH=your_github_tasks_file_path_here

# Google Calendar API Configuration (Optional)
# For Development: Use file path
GOOGLE_CALENDAR_CREDENTIALS_PATH=./google-api-credentials.json
# For Production: Use individual env vars
GOOGLE_CALENDAR_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
GOOGLE_CALENDAR_CLIENT_EMAIL=your-service-account@project-id.iam.gserviceaccount.com
GOOGLE_CALENDAR_PROJECT_ID=your-project-id
# Calendar ID (Required for both dev and prod)
GOOGLE_CALENDAR_ID=your-calendar-id@group.calendar.google.com

# Gemini API Key (Optional)
GEMINI_API_KEY=your_gemini_api_key_here
# Gemini Model Name (Optional, defaults to gemini-2.0-flash)
AI_MODEL=gemini-2.0-flash

# Server Configuration
PORT=3000
NODE_ENV=development

